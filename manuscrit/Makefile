all: FORCE

FORCE: version.tex
	pdflatex phd.tex
	bibtex phd
	pdflatex phd.tex
	pdflatex phd.tex

clean:
	rm -f *.aux *.brf *.log *.bbl *.blg *.dvi *.ps *.pdf *.*toc *.kilepr *.backup *.maf *.mtc* *.out

version.tex: ../.git/logs/HEAD
	echo "% Autogenerated file by Makefile, DO NOT EDIT\n" > version.tex
	git log -1 --format="format:\newcommand{\gitVersion}{%h}" >> version.tex
	echo "\n" >> version.tex

